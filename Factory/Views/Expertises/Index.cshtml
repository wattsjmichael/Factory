@{
  Layout = "_Layout";
}

@using Factory.Models;

@model List<Factory.Models.Expertise>;
<h1>Expertise</h1>
@if (Model.Count == 0)
{
  <h3>No Expertises have been added yet</h3>
}
@foreach (Expertise expertise in Model)
{
  <li>@Html.ActionLink($"{expertise.ExpertiseArea}", "Details", new { id = expertise.ExpertiseId} )</li>
}

<p>@Html.ActionLink("Add a new expertise", "Create", null, null, new { @class = "btn btn-success btn-sm"})</p>